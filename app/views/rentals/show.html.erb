<p id="notice"><%= notice %></p>

<p>
  <strong>物件名:</strong>
  <%= @rental.property %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @rental.rent %>
</p>

<p>
  <strong>住所:</strong>
  <%= @rental.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @rental.building_age %>
</p>

<p>
  <strong>備考:</strong>
  <%= @rental.remark %>
</p>

<tbody>
<% i = 0 %>
<% @favorite_stations.each do |favorite_station| %>
  <% i += 1 %>
  <h2>最寄り駅<%= i %></h2>
  <% if @rental.favorite_stations.any? %>
    <p><strong>路線名:</strong>
    <%= favorite_station.name_railway %></p>
    <p><strong>駅名:</strong>
    <%= favorite_station.station_name %></p>
    <p><strong>徒歩分数:</strong>
    <%= favorite_station.how_minute %></p>
  <% end %>
<% end %>
</tbody>

